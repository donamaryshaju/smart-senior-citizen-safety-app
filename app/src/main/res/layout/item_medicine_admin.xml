<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Medicine Image -->
        <ImageView
            android:id="@+id/img_medicine"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/paracetamol"
            android:scaleType="centerCrop"/>

        <!-- Text Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/text_med_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracetamol"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#37474F"/>

            <TextView
                android:id="@+id/text_med_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For fever and pain"
                android:textSize="14sp"
                android:textColor="#78909C"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/text_med_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹120.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#43A047"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- START: REPLACEMENT FOR 'ADD' BUTTON -->
        <!-- Container for Edit and Delete buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_edit"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Edit"
                android:textSize="14sp"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart"
                app:iconPadding="4dp"/>

            <Button
                android:id="@+id/btn_delete"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Delete"
                android:textColor="#D32F2F"
                app:icon="@drawable/ic_delete"
                app:iconTint="#D32F2F"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:textSize="14sp"/>

        </LinearLayout>
        <!-- END: REPLACEMENT FOR 'ADD' BUTTON -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
