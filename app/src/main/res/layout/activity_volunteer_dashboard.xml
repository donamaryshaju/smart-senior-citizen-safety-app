<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.VolunteerDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 1. Header Section with Gradient and Welcome Message -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header_background"
            android:paddingBottom="70dp">

            <TextView
                android:id="@+id/text_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Welcome,"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_volunteer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, John"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/text_welcome"
                app:layout_constraintTop_toBottomOf="@+id/text_welcome" />

            <ImageView
                android:id="@+id/icon_heart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/circular_white_background"
                android:padding="10dp"
                android:src="@drawable/ic_volunteer_activism"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_welcome"
                app:tint="#FF6B6B" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Main content area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- "Available Requests" Title -->
            <TextView
                android:id="@+id/txt_current_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Requests"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:textColor="#333333"/>

            <!-- Category Buttons Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_marginBottom="16dp">

                <!-- Medical Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_medical"
                    style="@style/CategoryCard">
                    <LinearLayout style="@style/CategoryLinearLayout" android:background="#E3F2FD">
                        <ImageView style="@style/CategoryIcon" android:src="@drawable/ic_medical" app:tint="#1565C0" />
                        <TextView style="@style/CategoryText" android:text="Medical" android:textColor="#1565C0"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Grocery Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_grocery"
                    style="@style/CategoryCard">
                    <LinearLayout style="@style/CategoryLinearLayout" android:background="#E8F5E9">
                        <ImageView style="@style/CategoryIcon" android:src="@drawable/ic_grocery" app:tint="#2E7D32" />
                        <TextView style="@style/CategoryText" android:text="Groceries" android:textColor="#2E7D32"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Transport Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_transport"
                    style="@style/CategoryCard">
                    <LinearLayout style="@style/CategoryLinearLayout" android:background="#FFF3E0">
                        <ImageView style="@style/CategoryIcon" android:src="@drawable/ic_transport" app:tint="#EF6C00" />
                        <TextView style="@style/CategoryText" android:text="Transport" android:textColor="#EF6C00"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Homecare Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_homecare"
                    style="@style/CategoryCard">
                    <LinearLayout style="@style/CategoryLinearLayout" android:background="#F3E5F5">
                        <ImageView style="@style/CategoryIcon" android:src="@drawable/ic_home_care" app:tint="#6A1B9A" />
                        <TextView style="@style/CategoryText" android:text="Home Care" android:textColor="#6A1B9A"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 2. The Overlapping Central Image -->
    <ImageView
        android:id="@+id/image_center_graphic"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/ic_account_circle"
        app:layout_anchor="@id/txt_current_category"
        app:layout_anchorGravity="top|center_horizontal"
        android:layout_marginTop="-170dp"/>

    <!-- 3. Bottom Sheet for Displaying Requests -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_sheet_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_peekHeight="200dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="#D1D1D1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/bottom_sheet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Showing: Medical Requests"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_requests"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_request_card"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
