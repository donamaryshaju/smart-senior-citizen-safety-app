<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- 1. HEADER & SEARCH AREA -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="16dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Medicines"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#37474F"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E1F5FE">

            <EditText
                android:id="@+id/search_medicine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Search for medicines..."
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="#78909C"
                android:textColor="#37474F"
                android:paddingStart="20dp"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="12dp"
                android:textSize="18sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- 2. BIG CHECKOUT BUTTON (Pinned to Bottom) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/layout_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#2E7D32"
        android:visibility="gone">

        <!-- Parent layout is clickable -->
        <LinearLayout
            android:id="@+id/btn_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground">

            <!-- Left Side: Text Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_cart_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Items | â‚¹50.00"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to order?"
                    android:textColor="#E8F5E9"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Right Side: VIEW CART Button (Replaces Play Icon) -->
            <!-- clickable=false ensures the click passes to the parent layout -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="VIEW CART"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:textSize="12sp"
                android:backgroundTint="#FFFFFF"
                app:cornerRadius="20dp"
                app:icon="@null"
                android:clickable="false"
                android:focusable="false"
                android:minWidth="100dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- 3. LIST OF MEDICINES -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_medicines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"
        android:layout_above="@id/layout_checkout"
        android:clipToPadding="false"
        android:paddingTop="10dp"
        android:paddingBottom="80dp"/>

</RelativeLayout>
