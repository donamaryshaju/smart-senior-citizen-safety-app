<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/req_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="#FFEBEE"
            android:padding="4dp"
            android:text="HIGH PRIORITY"
            android:textColor="#D32F2F"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/req_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Assistance"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/req_senior_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Senior: John Doe"
            android:textColor="#555555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/req_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Need help buying medicines."
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/req_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:text="123 Main St, New York"
            android:textColor="#666666"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4CAF50"
            android:text="Accept Request"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
