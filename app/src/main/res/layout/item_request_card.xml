<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/req_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Medical Assistance"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/req_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/req_type"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="HIGH"
                android:textColor="#D32F2F"
                android:textSize="12sp"
                android:textStyle="bold" 
                android:backgroundTint="#FFEBEE"
                android:layout_alignBaseline="@id/req_type"/>

             <TextView
                android:id="@+id/req_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignBaseline="@id/req_type"
                android:text="12 Dec"
                android:textColor="#757575"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/req_senior_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senior: John Doe"
            android:textColor="#555555"
            android:textSize="14sp"
            android:drawableStart="@android:drawable/ic_menu_myplaces"
            android:drawableTint="#777777"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/req_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Details..."
            android:textColor="#444444"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"/>

        <ImageView
            android:id="@+id/req_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:contentDescription="Prescription Image"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/req_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@android:drawable/ic_dialog_map"
            android:drawablePadding="8dp"
            android:text="Location..."
            android:textColor="#666666"
            android:textSize="13sp" />

        <!-- Action Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"> 

            <!-- Horizontal Group for Volunteer/Admin Actions (Hidden for Senior if not needed) -->
            <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_assign"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#2196F3"
                    android:text="Assign"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                <Button
                    android:id="@+id/btn_call_volunteer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#009688"
                    android:text="Call"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    app:icon="@android:drawable/ic_menu_call"/>

                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:text="Accept"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="8dp"/>
            </LinearLayout>

            <!-- TRACK BUTTON - FULL WIDTH BELOW -->
            <Button
                android:id="@+id/btn_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FF9800"
                android:text="TRACK"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:visibility="gone"
                app:cornerRadius="8dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
