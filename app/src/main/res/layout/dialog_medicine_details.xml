<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/dialog_med_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_medical"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/dialog_med_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/dialog_med_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: â‚¹0.00"
            android:textSize="18sp"
            android:textColor="#43A047"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/dialog_strip_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strip Info"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/dialog_calc_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost per unit"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_dialog_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
