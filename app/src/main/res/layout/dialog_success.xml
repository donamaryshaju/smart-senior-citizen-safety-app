<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Simple Green Checkmark -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/checkbox_on_background"
            app:tint="#43A047"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Sent!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A volunteer has been notified.\nThey will bring your medicine soon."
            android:textSize="18sp"
            android:textColor="#546E7A"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="6dp"/>

        <!-- BIG Button for Seniors -->
        <Button
            android:id="@+id/btn_success_ok"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="OK, THANK YOU"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#43A047"
            app:cornerRadius="30dp"
            android:layout_marginTop="32dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
