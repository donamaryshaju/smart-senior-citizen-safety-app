<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            app:title="Medical Emergency"
            app:navigationIcon="?attr/homeAsUpIndicator" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- High Priority Warning -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFEBEE"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸"
                        android:textSize="24sp"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This request will be marked as"
                            android:textColor="#D32F2F"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HIGH PRIORITY"
                            android:textColor="#D32F2F"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <!-- Location Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Location ðŸ“"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fetching location..."
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"/>

                    <TextView
                        android:id="@+id/text_gps_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ“ GPS Location Confirmed"
                        android:textColor="#4CAF50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_view_map"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Map"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:icon="@android:drawable/ic_dialog_map"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btn_edit_address"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Edit Address"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:icon="@android:drawable/ic_menu_edit"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <!-- Emergency Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Type * (Select One)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/radio_group_emergency_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rb_chest_pain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chest Pain / Heart Problem"/>
                <RadioButton
                    android:id="@+id/rb_breathing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Difficulty Breathing"/>
                <RadioButton
                    android:id="@+id/rb_fall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Severe Fall / Injury"/>
                <RadioButton
                    android:id="@+id/rb_unconscious"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unconscious / Fainting"/>
                <RadioButton
                    android:id="@+id/rb_stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stroke Symptoms"/>
                <RadioButton
                    android:id="@+id/rb_fever"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="High Fever / Infection"/>
                <RadioButton
                    android:id="@+id/rb_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other Emergency"
                    android:checked="true"/>
            </RadioGroup>


            <!-- Medical Conditions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Conditions (Auto-filled)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’Š Diabetes, Hypertension"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/text_blood_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ©¸ Blood Group: O+"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/text_allergies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸ Allergic to: Penicillin"
                        android:textColor="#D32F2F"
                        android:layout_marginBottom="12dp"/>

                     <Button
                        android:id="@+id/btn_edit_medical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Medical Info â†’"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_gravity="end"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Additional Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Details (Optional)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/edit_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Briefly describe the emergency..."
                        android:background="@null"
                        android:minLines="3"
                        android:gravity="top"
                        android:padding="8dp"/>

                    <Button
                        android:id="@+id/btn_voice_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voice Input"
                        app:icon="@android:drawable/ic_btn_speak_now"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_gravity="end"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Checkboxes -->
            <CheckBox
                android:id="@+id/check_notify_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify my emergency contacts (2 contacts)"
                android:checked="true"/>

            <CheckBox
                android:id="@+id/check_share_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share live location with family"
                android:checked="true"
                android:layout_marginBottom="24dp"/>

            <!-- Send Button -->
            <Button
                android:id="@+id/btn_send_alert"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ðŸš¨ SEND EMERGENCY ALERT"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#D32F2F"
                app:cornerRadius="30dp"
                android:layout_marginBottom="16dp"/>

            <!-- Call Emergency Layout -->
            <LinearLayout
                android:id="@+id/layout_call_emergency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Also call emergency: "
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ž 108"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
