<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <!-- Close Button Top End inside Card area (or just above) -->
    <!-- But cleaner to put inside card or make floating. Let's make card wrap content and center -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_volunteer_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp"
        app:cardCornerRadius="24dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:paddingBottom="24dp"
            android:orientation="vertical">

            <!-- Dialog Header Logic -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track Request"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    app:tint="#757575"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"/>
            </RelativeLayout>

            <!-- Timeline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">
                
                <TextView
                    android:id="@+id/step_accepted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accepted"
                    android:textSize="10sp"
                    android:textColor="#BDBDBD"
                    android:textStyle="bold"/>
                <View
                    android:id="@+id/line_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="2dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="2dp"/>
                 <TextView
                    android:id="@+id/step_on_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On Way"
                    android:textSize="10sp"
                    android:textColor="#BDBDBD"
                    android:textStyle="bold"/>
                 <View
                    android:id="@+id/line_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="2dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="2dp"/>
                 <TextView
                    android:id="@+id/step_arrived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrived"
                    android:textSize="10sp"
                    android:textColor="#BDBDBD"
                    android:textStyle="bold"/>
                 <View
                    android:id="@+id/line_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="2dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="2dp"/>
                 <TextView
                    android:id="@+id/step_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textSize="10sp"
                    android:textColor="#BDBDBD"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_eta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arriving in 15 mins"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_volunteer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volunteer: John Doe"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btn_call_volunteer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Call Volunteer"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50"
                app:icon="@android:drawable/ic_menu_call"
                app:iconGravity="textStart"
                app:cornerRadius="25dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
