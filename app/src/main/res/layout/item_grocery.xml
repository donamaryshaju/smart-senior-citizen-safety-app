<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Grocery Image (Size matched to Medicine card: 60dp) -->
        <ImageView
            android:id="@+id/img_grocery_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"/>

        <!-- Text Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Name (Size matched: 20sp Bold) -->
            <TextView
                android:id="@+id/txt_grocery_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grocery Item"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#37474F"/>

            <!-- Description (Size matched: 14sp Grey) -->
            <TextView
                android:id="@+id/txt_grocery_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description goes here..."
                android:textSize="14sp"
                android:textColor="#78909C"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

            <!-- Stock/Price (Size matched: 18sp Green) -->
            <TextView
                android:id="@+id/txt_grocery_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Stock: 10"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#43A047"
                android:layout_marginTop="6dp"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_add_item"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="ADD"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#039BE5"
            app:cornerRadius="25dp"
            android:paddingHorizontal="20dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
