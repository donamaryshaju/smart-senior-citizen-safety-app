<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_volunteer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_account_circle"
            app:tint="#757575"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/text_vol_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volunteer Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/text_vol_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­ 4.8 (12 Trips)"
                android:textSize="14sp"
                android:textColor="#FFC107"
                android:layout_marginTop="2dp"/>
            
            <TextView
                android:id="@+id/text_vol_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5 km away"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
        
        <Button
            android:id="@+id/btn_select_volunteer"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="SELECT"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0288D1"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
