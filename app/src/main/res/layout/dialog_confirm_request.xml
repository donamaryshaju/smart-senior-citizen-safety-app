<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 1. HEADER (Light Blue) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E3F2FD"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#1565C0"
                android:id="@+id/btn_close_dialog"/>

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Request"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 2. SELECTION BUTTONS (Replaces Dropdown) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Select specific help needed:"
                android:textColor="#555555"
                android:textSize="14sp" />

            <!-- We use a RadioGroup so only one can be clicked -->
            <RadioGroup
                android:id="@+id/radio_group_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/edit_text_bg"
                    android:buttonTint="#1565C0"
                    android:padding="10dp"
                    android:text="Doctor Consultation" />

                <RadioButton
                    android:id="@+id/rb_pharmacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/edit_text_bg"
                    android:buttonTint="#1565C0"
                    android:padding="10dp"
                    android:text="Buy Medicine / Pharmacy" />

                <RadioButton
                    android:id="@+id/rb_hospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/edit_text_bg"
                    android:buttonTint="#1565C0"
                    android:padding="10dp"
                    android:text="Hospital Visit / Transport" />
            </RadioGroup>

            <!-- 3. DESCRIPTION INPUT -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Description (Optional):"
                android:textColor="#555555"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/input_note"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edit_text_bg"
                android:gravity="top|start"
                android:hint="e.g. I have fever and dizziness."
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- 4. SUBMIT BUTTON -->
            <Button
                android:id="@+id/btn_confirm_send"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#1976D2"
                android:text="Submit Request"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="25dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
